# Sample CloudFormation Guard rules
# Customize these rules according to your security and compliance requirements

# Ensure S3 buckets have encryption enabled
rule s3_bucket_encryption_check {
    AWS::S3::Bucket {
        Properties {
            BucketEncryption exists
        }
    }
}

# Ensure IAM roles have a description
rule iam_role_description_check {
    AWS::IAM::Role {
        Properties {
            Description exists
        }
    }
}
